- (void)touchesBegan:(NSSet *)touches withEvent:(UIEvent *)event
{
//    if (self.view.frame.origin.x != 0 && self.view.frame.origin.x != -albumStorageWidth);
    NSArray *allTouches = [touches allObjects]; 
	int count = [allTouches count];
	if (count == 1) {
		currentTouch = [[allTouches objectAtIndex:0] locationInView:[self.view superview]]; 
    
//        NSLog(@"touchBegan : %f", touch.x);
        if (opened && currentTouch.x > 320 - albumStorageCloseEventMargin && currentTouch.x < 320 - albumStorageWidth)
            shouldMove = YES;
        if (!opened && currentTouch.x > 320 - albumStorageOpenEventMargin)
            shouldMove = YES;
        if (opened && currentTouch.x > 320 - albumStorageOneClickCloseEventMargin && currentTouch.x < 320 - albumStorageWidth)
            shouldOneClickMove = YES;
        if (!opened && currentTouch.x > 320 - albumStorageOneClickOpenEventMargin)
            shouldOneClickMove = YES;
        if (opened && currentTouch.x > 320 - albumStorageWidth)
            shouldScroll = YES;
        lastTouchX = currentTouch.x;
        albumVerticalMoveStartY = lastTouchY = currentTouch.y;
	}
    NSLog(@"opened : %d, shouldMove : %d, shouldOneClickMove : %d shouldScroll : %d",opened, shouldMove, shouldOneClickMove, shouldScroll);
}

//Modified by The Finest Artist at 5.20
- (void)touchesMoved:(NSSet *)touches withEvent:(UIEvent *)event
{
	NSArray *allTouches = [touches allObjects]; 
	int count = [allTouches count]; 
    
	if (count == 1) {
        currentTouch = [[allTouches objectAtIndex:0] locationInView:[self.view superview]];
        shouldOneClickMove = NO;
        
        if (currentTouch.x > lastTouchX)
            opened = YES;
        if (currentTouch.x < lastTouchX)
            opened = NO;
        lastTouchX = currentTouch.x;
        
        if (!opened && currentTouch.x > 320 - albumStorageCloseEventMargin && shouldMove) {
//            NSLog(@"opening:%f", currentTouch.x);
            if (currentTouch.x < 320 - albumStorageWidth) {
                self.view.frame = CGRectMake(-albumStorageWidth, 20, self.view.frame.size.width, self.view.frame.size.height);
            } else{
                self.view.frame = CGRectMake(cbrt(albumStorageWidth*albumStorageWidth/4*(currentTouch.x-320+albumStorageWidth/2))-albumStorageWidth/2, 0, self.view.frame.size.width, self.view.frame.size.height);
                self.view.frame = CGRectMake(cbrt(albumStorageWidth*albumStorageWidth/4)*cbrt(currentTouch.x-320+albumStorageWidth/2)-albumStorageWidth/2, 20, self.view.frame.size.width, self.view.frame.size.height);
            }
        }
        else if (opened && currentTouch.x > 320 - albumStorageCloseEventMargin && shouldMove) {
//            NSLog(@"closing:%f", currentTouch.x);
            if (320 - currentTouch.x > albumStorageWidth) {
                self.view.frame = CGRectMake(-albumStorageWidth, 20, self.view.frame.size.width, self.view.frame.size.height);
            } else{
                self.view.frame = CGRectMake(cbrt(albumStorageWidth*albumStorageWidth/4*(currentTouch.x-320+albumStorageWidth/2))-albumStorageWidth/2, 0, self.view.frame.size.width, self.view.frame.size.height);
                self.view.frame = CGRectMake(cbrt(albumStorageWidth*albumStorageWidth/4)*cbrt(currentTouch.x-320+albumStorageWidth/2)-albumStorageWidth/2, 20, self.view.frame.size.width, self.view.frame.size.height);
            }
        }
        
        if (shouldScroll) {
            double dy = cbrt(15*15*((int)(currentTouch.y-albumVerticalMoveStartY)%30-15))-cbrt(15*15*((int)(lastTouchY-albumVerticalMoveStartY)%30-15));
            NSLog(@"current : %f, last : %f, start : %f, dy : %f",currentTouch.y,lastTouchY,albumVerticalMoveStartY,dy);
            for(album * _album in albumArray)
            {
                _album.frame = CGRectMake(albumOriginX + albumStorageAlbumSpace/2-abs((int)(dy+_album.frame.origin.y)%60+dy+_album.frame.origin.y-(int)(dy+_album.frame.origin.y)-30), dy + _album.frame.origin.y, _album.frame.size.width, _album.frame.size.height);
                _album.initialFrame = _album.frame;
                _album.nameTag.frame = CGRectMake(-AlbumNameTagWidth + albumOriginX - _album.frame.origin.x - 7, 10, AlbumNameTagWidth - albumOriginX + _album.frame.origin.x + 20, 20);
            }
            lastTouchY = currentTouch.y;
            if (abs(albumVerticalMoveStartY - lastTouchY)>=30) {
                albumVerticalMoveStartY = lastTouchY;
            }
        }
	}
}

//Modified by The Finest Artist at 5.20
- (void)touchesEnded:(NSSet *)touches withEvent:(UIEvent *)event
{
    NSArray *allTouches = [touches allObjects]; 
	int count = [allTouches count]; 
    
    if (count == 1) {
        currentTouch = [[allTouches objectAtIndex:0] locationInView:[self.view superview]];
//        NSLog(@"touchEnded : %f",currentTouch.x);
        if (!opened && shouldOneClickMove) {
            [UIView beginAnimations:@"" context:nil];
            [UIView setAnimationDuration:albumStorageAnimationDuration/2];
            [UIView setAnimationCurve:UIViewAnimationCurveEaseIn];
            self.view.frame = CGRectMake(-albumStorageWidth, 20, self.view.frame.size.width, self.view.frame.size.height);
            opened = YES;
            [UIView commitAnimations];        
        } else if (opened && shouldOneClickMove) {
            [UIView beginAnimations:@"" context:nil];
            [UIView setAnimationDuration:albumStorageAnimationDuration/2];
            [UIView setAnimationCurve:UIViewAnimationCurveEaseIn];
            self.view.frame = CGRectMake(0, 20, self.view.frame.size.width, self.view.frame.size.height);
            opened = NO;
            [UIView commitAnimations];
        }
    }
    
    //In case AlbumStorage stuck in the middle
    if (self.view.frame.origin.x < 0 && self.view.frame.origin.x > -albumStorageAlbumSpace) {
        if (!opened) {
            [UIView beginAnimations:@"" context:nil];
            [UIView setAnimationDuration:albumStorageAnimationDuration/2];
            [UIView setAnimationCurve:UIViewAnimationCurveEaseIn];
            self.view.frame = CGRectMake(-albumStorageWidth, 20, self.view.frame.size.width, self.view.frame.size.height);
            opened = YES;
            [UIView commitAnimations];    
        } else{
            [UIView beginAnimations:@"" context:nil];
            [UIView setAnimationDuration:albumStorageAnimationDuration/2];
            [UIView setAnimationCurve:UIViewAnimationCurveEaseIn];
            self.view.frame = CGRectMake(0, 20, self.view.frame.size.width, self.view.frame.size.height);
            opened = NO;
            [UIView commitAnimations];
        }
    }
    
    //Album Vertical Move
    if (shouldScroll)
        for(album * _album in albumArray)
        {
            [UIView beginAnimations:nil context:nil];
            [UIView setAnimationDuration:albumVerticalAnimationDuration];
            _album.frame = CGRectMake(albumOriginX + albumStorageAlbumSpace/2-abs((int)((int)_album.frame.origin.y+15-((int)_album.frame.origin.y+15)%30)%60-30),(int)_album.frame.origin.y+15-((int)_album.frame.origin.y+15)%30, _album.frame.size.width, _album.frame.size.height);
            _album.nameTag.frame = CGRectMake(-AlbumNameTagWidth + albumOriginX - _album.frame.origin.x - 7, 10, AlbumNameTagWidth - albumOriginX + _album.frame.origin.x + 20, 20);
            [UIView commitAnimations];
        }
    
    //Refresh opened
    if (self.view.frame.origin.x == 0)
        opened = NO;
    if (self.view.frame.origin.x == -albumStorageWidth)
        opened = YES;
    
    shouldMove = NO;
    shouldOneClickMove = NO;
    lastTouchX = lastTouchY = albumVerticalMoveStartY = 0.0;
}

@end
