- (void)albumVerticalMove:(double)currentY albumY:(double)selectedAlbumY
{
    if (!albumVerticalMoveStarted) {
        albumVerticalMoveStartY = currentY;
        albumVerticalMoveStarted = YES;
    }
    
    double dy = cbrt(15*15*((int)(currentY-(int)albumVerticalMoveStartY%30)%30-15))+15+currentY-(int)albumVerticalMoveStartY%30-(int)(currentY-(int)albumVerticalMoveStartY%30)%30-selectedAlbumY;
    for(album * _album in albumArray)
    {
        _album.frame = CGRectMake(albumOriginX + albumStorageAlbumSpace/2-abs((int)(dy+_album.frame.origin.y)%60+dy+_album.frame.origin.y-(int)(dy+_album.frame.origin.y)-30), dy + _album.frame.origin.y, _album.frame.size.width, _album.frame.size.height);
        _album.initialFrame = _album.frame;
        _album.nameTag.frame = CGRectMake(-AlbumNameTagWidth + albumOriginX - _album.frame.origin.x - 7, 10, AlbumNameTagWidth - albumOriginX + _album.frame.origin.x + 20, 20);
    }
}

